<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <bottom>
            <Button fx:id="homeButton" mnemonicParsing="false" onAction="#handleHome" text="Back" BorderPane.alignment="BOTTOM_LEFT" />
         </bottom>
         <center>
            <Accordion fx:id="AccordionMenu" BorderPane.alignment="CENTER">
              <panes>
                <TitledPane fx:id="Accordion1" animated="false" text="Projects">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <ListView fx:id="projectListView" layoutX="-1.0" onMouseClicked="#handleTasks" prefHeight="428.0" prefWidth="800.0" />
                           </children>
                        </AnchorPane>
                  </content>
                </TitledPane>
                <TitledPane fx:id="Accordion2" animated="false" prefHeight="451.0" prefWidth="800.0" text="Tasks">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <ListView fx:id="TaskListView" layoutX="1.0" onMouseClicked="#handleTaskNotes" prefHeight="487.0" prefWidth="800.0" />
                           </children>
                        </AnchorPane>
                  </content>
                </TitledPane>
                <TitledPane fx:id="Accordion3" animated="false" text="Task Notes">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TextArea fx:id="ActivityNoteView" editable="false" prefHeight="413.0" prefWidth="800.0" />
                              <CheckBox fx:id="CompletedButton" layoutX="357.0" layoutY="423.0" mnemonicParsing="false" onAction="#handleCOMPLETED" text="Completed?" />
                           </children>
                        </AnchorPane>
                  </content>
                </TitledPane>
              </panes>
            </Accordion>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
