<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.LoginController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="800.0">
         <center>
            <GridPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="400.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="245.0" minWidth="10.0" prefWidth="76.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="386.0" minWidth="10.0" prefWidth="324.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handle" text="Login" translateX="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Button>
                  <TextField fx:id="userTextField" maxWidth="-Infinity" prefWidth="250.0" translateX="50.0" GridPane.columnIndex="1" />
                  <PasswordField fx:id="passTextField" maxWidth="-Infinity" prefWidth="250.0" translateX="50.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Username:" translateX="10.0" />
                  <Label text="Password" translateX="10.0" GridPane.rowIndex="1" />
                  <Button fx:id="NewUserButton" mnemonicParsing="false" onAction="#handleNewUser" text="New User" translateX="50.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <padding>
                        <Insets bottom="10.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
            </GridPane>
         </center>
         <top>
            <Label text="Omnimanager" translateY="50.0" BorderPane.alignment="CENTER">
               <font>
                  <Font size="48.0" />
               </font>
            </Label>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
